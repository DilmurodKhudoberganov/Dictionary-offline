<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/ekshnbar_2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/ekshbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#2F77B1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/language_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text="O'zb"
                    android:textColor="@color/white"
                    android:textSize="32sp" />


                <ImageView
                    android:id="@+id/change"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:src="@drawable/exchange"
                    android:textSize="32sp" />


                <TextView
                    android:id="@+id/language_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="40dp"
                    android:text="Eng"
                    android:textColor="@color/white"
                    android:textSize="32sp" />

                <Space
                    android:layout_width="80dp"
                    android:layout_height="match_parent" />


                <ImageView
                    android:id="@+id/transition_favorit"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/baseline_favorite_border_24" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="#2F77B1">

                <EditText
                    android:id="@+id/txt_edit"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="25dp"
                    android:background="@drawable/corner"
                    android:drawableStart="@drawable/baseline_search_24"
                    android:drawableTint="#9c9c9c"
                    android:ems="10"
                    android:hint="   Email"
                    android:inputType="textPersonName"
                    android:paddingHorizontal="15dp"
                    android:singleLine="true"
                    android:textColorHint="#9c9c9c"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/creat" />
            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/notFound"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:gravity="center"
            android:text="Not found"
            android:textColor="@color/blue"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/resacl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/blue" />


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>